@model List<Domain.Entities.LoginAndExit>
@{
    Layout = "_Layout";
}

@section Styles{
    .table {
    width: 100%;
    margin-bottom: 1rem;
    background-color: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-collapse: collapse;
    }

    .table th,
    .table td {
    padding: 0.75rem;
    vertical-align: top;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    }

    .table thead th {
    vertical-align: bottom;
    border-bottom: 2px solid rgba(0, 0, 0, 0.1);
    }

    .table tbody + tbody {
    border-top: 2px solid rgba(0, 0, 0, 0.1);
    }

    .btn {
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.25rem;
    }
}
<h3>Kullanıcının Bütün Giriş Çıkışları</h3>
<table class="table">
    <thead>
    <tr>
        <th style="width: 12%">Çalışan Kodu</th>
        <th style="width: 12%">Giriş Zamanı</th>
        <th style="width: 12%">Çıkış Zamanı</th>
    </tr>
    </thead>
    <tbody>
    @{
        foreach (var loginAndExit in Model)
        {
            <tr>
                <td style="width: 20%">@loginAndExit.EmployeeCode</td>
                <td style="width: 20%">@loginAndExit.LoginTime</td>
                <td style="width: 20%">@loginAndExit.ExitTime</td>
            </tr>
        }
    }
    </tbody>
</table>
